@model IEnumerable<FirstTask.Models.ProgrammerModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Programmers page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionName)
            </td>
            <td>
                 <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PositionID">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.PositionID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PositionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
