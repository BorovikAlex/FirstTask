@model IEnumerable<Logic.DTOModels.ProgrammerDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Programmers page</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Programmer</a>
</p>
<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.PositionName)
                </td>
                <td>
                    <a class="btn btn-primary button-size" asp-action="Edit" asp-route-id="@item.ProgrammerID">Edit</a> |
                    <a class="btn btn-secondary button-size" asp-action="Details" asp-route-id="@item.ProgrammerID">Details</a> |
                    <a class="btn btn-danger button-size" asp-action="Delete" asp-route-id="@item.ProgrammerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
