@model Logic.DTOModels.ProgrammerDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Programmer</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Name) <br />
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new{ @class ="form-control"} })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.LastName) <br />
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new{ @class ="form-control"} })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Position) <br />
                @Html.DropDownListFor(model => model.PositionID, ViewBag.Positions as SelectList, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary button-size" />
                <a class="btn btn-dark button-size" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
