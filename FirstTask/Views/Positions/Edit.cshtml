@model Logic.DTOModels.PositionDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Position</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">

            <div class="form-group" hidden>
                @Html.EditorFor(model => model.PositionID)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.PositionName) <br />
                @Html.EditorFor(model => model.PositionName, new { htmlAttributes = new{ @class ="form-control"} })
            </div>


            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary button-size" />
                <a class="btn btn-dark button-size" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
